{
    "compileOnSave": true,
    "compilerOptions": {
      "noEmit": true,
      "allowJs": true,
      "checkJs": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "strict": true,
      "noImplicitAny": false,
      "target": "es2018",
      "typeRoots": [
        "types",
        "node_modules/@types"
      ]
    },
    "include": [
      "**/*.ts",
      "types/javascript.d.ts"
    ],
    "exclude": [
      "node_modules/**"
    ]
  }